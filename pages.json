{
  "easycom": {
    "^u-(.*)": "@/uni_modules/uview-ui/components/u-$1/u-$1.vue"
  },
  "pages": [
    //pages数组中第一项表示应用启动页，参考：https://uniapp.dcloud.io/collocation/pages
    {
      "path": "pages/index/index",
      "style": {
        "navigationBarTitleText": "神州牙都会",
        "app-plus": {
          "scrollIndicator": "none",
          "titleNView": {
            "searchInput": {
              "align": "left",
              "backgroundColor": "#F7F7F7",
              "borderRadius": "4px",
              "disabled": true,
              "placeholder": "请输入搜索内容",
              "placeholderColor": "#CCCCCC"
            },
            "buttons": [{
                "color": "#989898",
                "colorPressed": "#FD6801",
                "float": "left",
                "fontSize": "22px",
                "fontSrc": "/static/font/iconfont.ttf",
                "text": "\ue67a"
              },
              {
                "color": "#989898",
                "colorPressed": "#FD6801",
                "float": "right",
                "fontSize": "22px",
                "fontSrc": "/static/font/iconfont.ttf",
                "text": "\ue661"
              }
            ]
          }
        }
      }
    },
    {
      "path": "pages/project/project",
      "style": {
        "navigationBarTitleText": "极速问诊"
      }
    },
    {
      "path": "pages/register/register",
      "style": {
        "navigationBarTitleText": "挂号"
      }
    },
    {
      "path": "pages/my/my",
      "style": {
        "navigationBarTitleText": "个人中心"
      }
    },
    {
     "path": "pages/test/test"
    },
    {
      "path": "components/login/login",
      "style": {
        "navigationBarTitleText": "",
        "enablePullDownRefresh": false
      }
    },
    {
      "path": "pages/medical/medical"
    },

    {
      "path": "pages/record/record"
    },
	{
		"path": "pages/index-nav-detail/teeth-whitening/src/teeth-whitening",
	"style": {
	  "navigationBarTitleText": "美白牙齿"
	}
	},
    {
      "path": "components/search/search",
      "style": {
        "navigationBarTitleText": "搜索"
      }
    },

    {
      "path": "components/page-detail/src/page-detail",
      "style": {
        "navigationBarTitleText": "",
        "enablePullDownRefresh": false
      }

    }
  ],
  "globalStyle": {
    "navigationBarTextStyle": "black",
    "navigationBarTitleText": "神州牙都会",
    "navigationBarBackgroundColor": "#20b2aa",
    "backgroundColor": "#fff"
  },
  "tabBar": {
    "color": "#B5B5B5",
    "selectedColor": "#20b2aa",
    "borderStyle": "black",
    "backgroundColor": "#ffffff",
    "list": [{
        "pagePath": "pages/index/index",
        "text": "首页",
        "iconPath": "static/tabbar/index.jpg",
        "selectedIconPath": "static/tabbar/indexSelected.jpg"
      },
      {
        "pagePath": "pages/project/project",
        "text": "极速问诊",
        "iconPath": "static/tabbar/msg.jpg",
        "selectedIconPath": "static/tabbar/msgSelected.jpg"
      },
      {
        "pagePath": "pages/register/register",
        "text": "挂号",
        "iconPath": "static/tabbar/register.jpg",
        "selectedIconPath": "static/tabbar/registerSelected.jpg"
      },

      {
        "pagePath": "pages/my/my",
        "text": "个人中心",
        "iconPath": "static/tabbar/my.jpg",
        "selectedIconPath": "static/tabbar/mySelected.jpg"
      }
    ]
  },
	"condition" : { //模式配置，仅开发期间生效
		"current": 0, //当前激活的模式(list 的索引项)
		"list": [
			{
				"name": "", //模式名称
				"path": "", //启动页面，必选
				"query": "" //启动参数，在页面的onLoad函数里面得到
			}
		]
	}
}
